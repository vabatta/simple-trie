	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"internalConsoleOptions": "neverOpen",
			"request": "launch",
			"name": "Debug File",
			"program": "${file}",
			"cwd": "${workspaceFolder}",
			"runtimeArgs": [
				"--import=tsx"
			],
			"stopOnEntry": false
		},
		{
			"type": "node",
			"internalConsoleOptions": "neverOpen",
			"request": "launch",
			"name": "Run File",
			"program": "${file}",
			"cwd": "${workspaceFolder}",
			"runtimeArgs": [
				"--import=tsx"
			],
		},
		{
			"type": "node",
			"internalConsoleOptions": "neverOpen",
			"request": "attach",
			"name": "Attach Node"
		}
	]
}
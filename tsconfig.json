{
	"compilerOptions": {
		// Enable latest features
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		// Bundler mode
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
	},
}